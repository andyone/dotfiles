[core]
  excludesfile = ~/.gitignore
  pager = less -x1,3

[init]
  defaultBranch = master

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[diff]
  renamelimit = 0

[merge]
  summary = true

[help]
  autocorrect = 30

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff --staged
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[gitflow "branch"]
  master = master
  develop = develop

[gitflow "prefix"]
  feature = feature-
  release = release-
  hotfix = hotfix-
  support = support-
  versiontag =

[pull]
  rebase = false

[include]
  path = .gitconfig.local
